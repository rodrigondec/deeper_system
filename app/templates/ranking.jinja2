{% extends "layout.jinja2" %}

{% block content %}
    <div class="col-md-4 col-md-offset-4">
        <h1>Themes Ranking</h1>
        <hr>
        <div class="col-md-8 col-md-offset-2">
            <table class="table text-center">
                <thead>
                    <th class="col-md-1">Posição</th>
                    <th class="col-md-3">Tema</th>
                    <th class="col-md-2">Rating</th>
                </thead>
                {% for index, theme in themes %}
                <tr>
                    <td>{{ index + 1 }}</td>
                    <td>{{ theme.name }}</td>
                    <td>{{ theme.rating }}</td>
                </tr>
            {% endfor %}
            </table>
            <ol>
            {% for theme in themes %}
                <li>{{ theme.name }} | {{ theme.rating }}</li>
            {% endfor %}
            </ol>
        </div>
    </div>
{% endblock content %}
